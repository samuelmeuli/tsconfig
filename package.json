{
	"name": "@samuelmeuli/tsconfig",
	"version": "0.1.1",
	"description": "My TypeScript configuration",
	"keywords": [
		"typescript",
		"config",
		"tsconfig"
	],
	"author": {
		"name": "Samuel Meuli",
		"email": "me@samuelmeuli.com",
		"url": "https://samuelmeuli.com"
	},
	"repository": "github:samuelmeuli/tsconfig",
	"license": "MIT",
	"files": [
		"tsconfig.json"
	],
	"main": "tsconfig.json",
	"scripts": {
		"format": "prettier --write",
		"release": "np"
	},
	"devDependencies": {
		"husky": "^3.0.7",
		"lint-staged": "^9.4.0",
		"np": "~5.0.0",
		"prettier": "^1.18.2"
	},
	"prettier": {
		"printWidth": 100,
		"trailingComma": "all"
	},
	"lint-staged": {
		"*.{json,md,yml}": [
			"yarn format",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
